        <servlet-name>Teacherupdateval</servlet-name>
        <servlet-class>Teacherupdateval</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>batchupdateval</servlet-name>
        <servlet-class>batchupdateval</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentUpdateVal</servlet-name>
        <url-pattern>/StudentUpdateVal</url-pattern>
